@model List<string>

@{
  var roller = ViewData["Roller"] as SelectList;
  var kullanici = ViewData["Kullanici"] as Microsoft.AspNetCore.Identity.IdentityUser;
}

<h1>Kullanıcıya Rol Ekle</h1>
<hr />
<div>
  <dl class="row">
    <dt class="col-sm-2">
      E-Mail
    </dt>
    <dd class="col-sm-10">
      @kullanici.Email
    </dd>
    <dt class="col-sm-2">
      Kullanıcı Adı
    </dt>
    <dd class="col-sm-10">
      @kullanici.UserName
    </dd>
  </dl>
</div>
<div class="row">
  <div class="col-md-12">
    <form asp-action="KullaniciyaRolVer" asp-controller="Kullanici" asp-area="Yonetici" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label class="control-label">Roller</label>
        <select name="rol" class="form-control" asp-items="roller" multiple></select>
      </div>
      <div class="form-group">
        <input type="submit" value="Onayla" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Liste" class="btn btn-primary">Listeye Dön</a>
</div>