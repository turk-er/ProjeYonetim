@model ProjeYonetim.Models.Personel

@{
    ViewData["Title"] = "Detay";
}


<style>
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }
    .main-body {
        padding: 15px;
    }
    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

    .hr{
        margin-bottom:4px;
        margin-top:5px;
    }

    .row{

        padding-top:5px !important; 
        padding-bottom:5px !important;
    }
</style>


<div class="container">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card h-25">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/@Model.ProfilResmi" class="rounded-circle" height="150" width="150" asp-append-version="true" />

                            <div class="mt-3">
                                <h4>@Model.AdSoyad</h4>
                                <p class="text-secondary mb-1">@Model.Departman.DepartmanAdi</p>


                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-sm-12 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Bulunduğu Projeler</i></h3>
                            @foreach (var item in Model.PersonelProjes)
                            {
                                <ul>
                                    <li>
                                        <b><i>@item.Proje.ProjeAdi</i></b>
                                        <ul>
                                            <li> <b>Başlama Tarihi: </b> @item.Proje.BasTarihi.ToShortDateString()</li>
                                            <li> <b>Bitiş Tarihi&nbsp;&nbsp; &nbsp; &nbsp;:</b>  @item.Proje.BitTarihi.ToShortDateString()</li>
                                        </ul>
                                    </li>
                                </ul>
                                <hr />
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.AdSoyad
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Departman</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Departman.DepartmanAdi
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.TelefonNo
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Doğum Tarihi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.DogumTarihi.ToShortDateString()
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Cinsiyet
                            </div>
                        </div>
                        <hr class="hr">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Maaş</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Maas
                            </div>
                        </div>
                     


                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3> <i class="bg-white d-flex mb-1 material-icons text-info mr-2">Görevler</i></h3>
                    </div>
                    @foreach (var item in Model.YapilacaklarListesis)
                    {

                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body col-md-12">

                                    <div class="card-body h-75">
                                        <h5 class="card-title"><b> Görev &nbsp;: </b> @item.Baslik</h5>
                                        <div class="overflow-auto">
                                            <p class="card-text"><b>Detay</b>  &nbsp;&nbsp;&nbsp;&nbsp;:@item.Gorev</p>

                                        </div>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><b>Priority&nbsp;:</b> @item.Oncelik</li>
                                        <li class="list-group-item">@item.BaslamaZamani.ToShortDateString()&nbsp; - &nbsp;@item.BitisZamanı.ToShortDateString()</li>

                                    </ul>

                                </div>
                            </div>

                        </div>
                    }

                </div>


            </div>
        </div>

    </div>
</div>


